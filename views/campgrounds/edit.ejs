<% layout('layouts/boilerplate') %>

            <div class="row">
                <div class="col-6 offset-3">
                    <h1>Edit the Campground</h1>
        
            <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= campground.title %>" required>
            </div>
        
            <div class="mb-3" >
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
            </div>
            <div>
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control"  id="price" aria-label="price" aria-describedby="price-label" placeholder="0.00" name="campground[price]" value="<%= campground.price %>" required>
              </div>
            </div>
            <div class="mb-3" >
                <label class="form-label" for="url">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="url" value="<%= campground.image %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea required class="form-control" type="text" name="campground[description]" id="description" ><%= campground.description %></textarea>
            </div>
           <div class="mb-3">
            <button class="btn btn-info">Save Campground</button>
        </div>
        <footer>
            <a href="/campgrounds/<%= campground._id %>">Back to the Campground</a>
        </footer>
            </form>
                </div>
            </div>