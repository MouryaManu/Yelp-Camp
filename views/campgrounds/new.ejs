<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Add a new Campground</h1>

    <form action="/campgrounds" method="POST">
    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title">
    </div>

    <div class="mb-3" >
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location">
    </div>
    <div>
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" class="form-control"  id="price" aria-label="price" aria-describedby="price-label" placeholder="0.00" name="campground[price]">
      </div>
    </div>
    <div class="mb-3" >
        <label class="form-label" for="url">Image URL</label>
        <input class="form-control" type="text" name="campground[image]" id="url">
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
    </div>
   <div class="mb-3">
    <button class="btn btn-success">Add Campground</button>
</div>
<footer>
<a href="/campgrounds">Back to all Campgrounds</a>
</footer>
    </form>
        </div>
    </div>